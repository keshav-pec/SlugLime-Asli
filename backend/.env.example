# Flask Configuration
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Server Configuration
# Host and port where the backend server will run
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database Configuration (paths are auto-converted to absolute)
# Leave as relative paths - they'll be resolved automatically
DATABASE_URI=sqlite:///instance/app.db

# CORS Configuration
# Add all frontend URLs that should be allowed to access the API
# Comma-separated list (no spaces after commas recommended)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Upload Configuration (paths are auto-converted to absolute)
UPLOAD_FOLDER=uploads
